<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4 card">
        <div class="login-card-head"><h2 class="title is-2">Login</h2></div>
        <div class="card-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.label :email, class: "label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input con-input" %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.label :password, class: "label" %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "input con-input" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <div class="control">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              </div>
            <% end %>

            <div class="field">
              <div class="control">
                <%= f.submit "Log in", class: "auth-button button is-medium" %>
              </div>
            </div>
          <% end %>
          <br />

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

